<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.sebuilder.interpreter.javafx.view.menu.DatasourcePresenter">
    <children>
        <SplitPane dividerPositions="0.5" orientation="VERTICAL" prefHeight="100.0" prefWidth="400.0">
            <items>
                <AnchorPane maxHeight="60.0" prefHeight="60.0">
                    <children>
                        <GridPane maxHeight="30.0" prefHeight="30.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0"/>
                                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0"
                                                   prefWidth="50.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="15.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <Label text="datasource dir" GridPane.rowIndex="2"/>
                                <TextField fx:id="datasourceText" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                                <Button fx:id="datasourceSearchButton" onAction="#dataSourceSearch"
                                        mnemonicParsing="false" text="search" GridPane.columnIndex="2"
                                        GridPane.rowIndex="2"/>
                            </children>
                        </GridPane>
                    </children>
                </AnchorPane>
                <AnchorPane prefHeight="40.0" prefWidth="350.0">
                    <children>
                        <GridPane>
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="350.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="50.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <Button fx:id="editButton" onAction="#settingEdit" mnemonicParsing="false" text="Edit"
                                        GridPane.columnIndex="1" GridPane.halignment="CENTER"
                                        GridPane.valignment="CENTER"/>
                            </children>
                        </GridPane>
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
    </children>
</AnchorPane>
