{
  "aspect": [
    {
      "pointcut": [
        {
          "type": [
            "SetElementText",
            "SelectElementValue",
            "SetElementSelected"
          ],
          "skip": "false"
        }
      ],
      "before": {
        "steps": [
          {
            "file": "input${has('_index') ? get('_index') : ''}.png",
            "scroll": "false",
            "locator": {
              "type": "${_target.locator.type}",
              "value": "${_target.locator.value}"
            },
            "type": "SaveScreenshot"
          }
        ]
      },
      "after": {
        "steps": [
          {
            "file": "input${has('_index') ? get('_index') : ''}.png",
            "scroll": "false",
            "locator": {
              "type": "${_target.locator.type}",
              "value": "${_target.locator.value}"
            },
            "type": "SaveScreenshot"
          }
        ]
      }
    },
    {
      "pointcut": [
        {
          "locator": {
            "type": "id",
            "value": [
              "agree_and_goto_next",
              "commit"
            ]
          }
        },
        {
          "type": "Get"
        }
      ],
      "before": {
        "steps": [
          {
            "type": "storeTitle",
            "variable": "pageTitle"
          },
          {
            "file": "page.png",
            "scroll": "true",
            "skip": "${get('pageTitle') != '予約情報入力'}",
            "verify": "${env.verifyImage}",
            "locatorExclude": {
              "type": "id",
              "value": "datePick"
            },
            "pixelToleranceLevel": "0.3",
            "allowingPercentOfDifferentPixels": "0.1",
            "type": "SaveScreenshot"
          },
          {
            "file": "page.png",
            "scroll": "true",
            "skip": "${get('pageTitle') != '予約内容確認'}",
            "verify": "${env.verifyImage}",
            "locatorExclude": {
              "type": "css selector",
              "value": "#term,#price"
            },
            "pixelToleranceLevel": "0.3",
            "allowingPercentOfDifferentPixels": "0.1",
            "type": "SaveScreenshot"
          },
          {
            "file": "page.png",
            "scroll": "true",
            "skip": "${get('pageTitle') == '予約情報入力' or get('pageTitle') == '予約内容確認'}",
            "verify": "${env.verifyImage}",
            "pixelToleranceLevel": "0.3",
            "allowingPercentOfDifferentPixels": "0.1",
            "type": "SaveScreenshot"
          }
        ]
      },
      "after": {
        "steps": [
          {
            "type": "storeTitle",
            "variable": "pageTitle"
          },
          {
            "file": "page.png",
            "scroll": "true",
            "skip": "${get('pageTitle') != '予約情報入力'}",
            "verify": "${env.verifyImage}",
            "locatorExclude": {
              "type": "id",
              "value": "datePick"
            },
            "pixelToleranceLevel": "0.3",
            "allowingPercentOfDifferentPixels": "0.1",
            "type": "SaveScreenshot"
          },
          {
            "file": "page.png",
            "scroll": "true",
            "skip": "${get('pageTitle') != '予約内容確認'}",
            "verify": "${env.verifyImage}",
            "locatorExclude": {
              "type": "css selector",
              "value": "#term,#price"
            },
            "pixelToleranceLevel": "0.3",
            "allowingPercentOfDifferentPixels": "0.1",
            "type": "SaveScreenshot"
          },
          {
            "file": "page.png",
            "scroll": "true",
            "skip": "${get('pageTitle') == '予約情報入力' or get('pageTitle') == '予約内容確認'}",
            "verify": "${env.verifyImage}",
            "pixelToleranceLevel": "0.3",
            "allowingPercentOfDifferentPixels": "0.1",
            "type": "SaveScreenshot"
          }
        ]
      }
    },
    {
      "pointcut": [
        {
          "type": {
            "value":"SaveScreenshot",
            "method": "!equals"
          }
        }
      ],
      "failure": {
        "steps": [
          {
            "file": "error.png",
            "type": "SaveScreenshot"
          }
        ]
      }
    }
  ]
}